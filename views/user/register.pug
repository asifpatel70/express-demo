extends ../layout

block content
    if(typeof errors != 'undefined')
        <div class="alert alert-warning alert-dismissible fade show" role="alert">#{errors}</div>
    #layoutAuthentication
        #layoutAuthentication_content
            main
                .container
                    .row.justify-content-center
                        .col-lg-7
                            .card.shadow-lg.border-0.rounded-lg.mt-5
                            .card-header
                                h3.text-center.font-weight-light.my-4 #{i18n.__("createAccount")}
                            .card-body
                                form(action='/users/create', method='POST')
                                    .form-floating.mb-3
                                            input.form-control#inputFirstName(type='text' required name="firstName" placeholder='#{i18n.__("enterYourName")}')
                                            label(for='inputFirstName') #{i18n.__("name")}
                                    .form-floating.mb-3
                                            input.form-control#inputUserName(type='text' required name="userName" placeholder='#{i18n.__("enterYourUserName")}')
                                            label(for='inputFirstName') #{i18n.__("userName")}
                                    .form-floating.mb-3
                                            input.form-control#inputPassword(type='password' required name="password" placeholder='#{i18n.__("createPassword")}')
                                            label(for='inputPassword') #{i18n.__("password")}
                                    .mt-4.mb-0
                                        .d-grid
                                        input.btn.btn-primary.btn-block(type='submit')
        #layoutAuthentication_footer
            footer.py-4.bg-light.mt-auto
            .container-fluid.px-4
                .d-flex.align-items-center.justify-content-between.small
                .text-muted Copyright @ Your Website 2021
                div
                    a(href='#') Privacy Policy
                    a(href='#') Terms & Conditions
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' crossorigin='anonymous')
        script(src='https://startbootstrap.github.io/startbootstrap-sb-admin/js/scripts.js')