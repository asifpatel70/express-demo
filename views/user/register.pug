doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width,initial-scale=1,shrink-to-fit=no')
    meta(name='description' content)
    meta(name='author' content)
    title Register - SB Admin
    link(href='https://startbootstrap.github.io/startbootstrap-sb-admin/css/styles.css' rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css' rel='stylesheet')
    
    script(src='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js' crossorigin='anonymous')
    <script src="/jquery/jquery.js"></script>
    <script src="/javascripts/ajax.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
  
  body
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          if(loggedIn)         
            <li class="nav-item active">
            <a class="nav-link" href='/users'>User</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/products'>Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/en'>English</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/no'>Norway</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/logout'>Logout</a>
            </li>
          else 
            <li class="nav-item">
              <a class="nav-link" href='/en'>English</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/no'>Norway</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href='/login'>login</a>
            </li>
        </ul>
      </div>
    </nav>

    if(typeof errors != 'undefined')
        <div class="alert alert-warning alert-dismissible fade show" role="alert">#{errors}</div>
    #layoutAuthentication
        #layoutAuthentication_content
            main
                .container
                    .row.justify-content-center
                        .col-lg-7
                            .card.shadow-lg.border-0.rounded-lg.mt-5
                            .card-header
                                h3.text-center.font-weight-light.my-4 #{i18n.__("createAccount")}
                            .card-body
                                form(action='/users/create', method='POST')
                                    input(type='hidden' name='csrf' value=token)
                                    .form-floating.mb-3
                                            input.form-control#inputFirstName(type='text' required name="firstName" placeholder='#{i18n.__("enterYourName")}')
                                            label(for='inputFirstName') #{i18n.__("name")}
                                    .form-floating.mb-3
                                            input.form-control#inputUserName(type='text' required name="userName"  placeholder='#{i18n.__("enterYourUserName")}')
                                            label(for='inputFirstName') #{i18n.__("userName")}
                                    .form-floating.mb-3
                                            input.form-control#inputPassword(type='password' required name="password" placeholder='#{i18n.__("createPassword")}')
                                            label(for='inputPassword') #{i18n.__("password")}
                                    .form-floating.mb-3
                                            input.form-control#inputPassword(type='email' required name="email" placeholder='#{i18n.__("email")}')
                                            label(for='inputPassword') #{i18n.__("email")}
                                    .mt-4.mb-0
                                        .d-grid
                                        input.btn.btn-primary.btn-block(type='submit')
        #layoutAuthentication_footer
            footer.py-4.bg-light.mt-auto
            .container-fluid.px-4
                .d-flex.align-items-center.justify-content-between.small
                .text-muted Copyright @ Your Website 2021
                div
                    a(href='#') Privacy Policy
                    a(href='#') Terms & Conditions
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' crossorigin='anonymous')
        script(src='https://startbootstrap.github.io/startbootstrap-sb-admin/js/scripts.js')