extends ../layout

block content

    <div id="layoutSidenav_content">
            <div id="layoutAuthentication_content">
                <main>
                    if(typeof errors != 'undefined')
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">#{errors}</div>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">#{i18n.__("editAccount")}</h3></div>
                                    <div class="card-body">
                                        <form action='/users/update/#{users.id}', method='POST'>
                                            input(type='hidden' name='csrf' value=token)
                                            <div class="form-floating mb-3">        
                                                <input required class="form-control" value=#{users.name} name='firstName' id="inputFirstName" type="text" />
                                                <label for="inputFirstName">#{i18n.__("name")}</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input readonly required class="form-control" value=#{users.userName} name='userName' id="inputEmail" type="text"/>
                                                <label for="inputEmail">#{i18n.__("userName")}</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input readonly required class="form-control" value=#{users.email} name='email' id="inputEmail" type="text"/>
                                                <label for="inputEmail">#{i18n.__("email")}</label>
                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid">
                                                    <input type="submit" class="btn btn-primary btn-block" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Your Website 2021</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
    </div>
